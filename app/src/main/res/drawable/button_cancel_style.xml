<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item  android:state_pressed="true" >
        <shape>
            <solid
                android:color="#f8f9fa" />
            <stroke
                android:width="1dp"
                android:color="#d2d2d2" />
            <corners
                android:radius="1dp" />
           
        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:startColor="#FFCDD2"
                android:endColor="#B71C1C"
                android:angle="270" />
            <stroke
                android:width="4dp"
                android:color="#d2d2d2" />
            <corners
                android:radius="2dp" />
           
        </shape>
    </item>
</selector>